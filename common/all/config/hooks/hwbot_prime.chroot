#!/bin/bash

wget -O /tmp/hwbotprime.zip http://downloads.hwbot.org/downloads/hwbotprime.zip
cd /opt/hwbotprime
unzip /tmp/hwbotprime.zip
rm /opt/hwbotprime/benchbot.*
rm /tmp/hwbotprime.zip

cat << EOF > hwbotprime
#!/bin/bash
java -jar /opt/hwbotprime/hwbotprime-0.8.3.jar
EOF

chmod 775 hwbotprime

ln -s /opt/hwbotprime/hwbotprime /usr/local/bin/hwbotprime
